{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@foo/bar": ["foo/bar"]
    }
  },
  "exclude": ["node_modules", "dist", "tests/*", "dist/*", "jest.*"]
}
